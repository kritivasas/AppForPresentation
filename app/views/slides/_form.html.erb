  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :value => 'name' %>
  </div>
  <div class="field">
    <%= f.label :position_x %><br />
    <%= f.text_field :position_x, :value => '0' %>
  </div>
  <div class="field">
    <%= f.label :position_y %><br />
    <%= f.text_field :position_y, :value => '0' %>
  </div>
  <div class="field">
    <%= f.label :position_z %><br />
    <%= f.text_field :position_z, :value => '0' %>
  </div>
  <div class="field">
    <%= f.label :rotation_x %><br />
    <%= f.text_field :rotation_x, :value => '0' %> (in degrees and works well for safari only)
  </div>
  <div class="field">
    <%= f.label :rotation_y %><br />
    <%= f.text_field :rotation_y, :value => '0' %> (in degrees and works well for safari only)
  </div>
  <div class="field">
    <%= f.label :rotation_z %><br />
    <%= f.text_field :rotation_z, :value => '0' %> (in degrees)
  </div>
  <div class="field">
    <%= f.label :scale %><br />
    <%= f.text_field :scale, :value => '1' %> (prefer  0 - 10000)
  </div>
  <div class="field">
    <%= f.label :slide_class %><br />
    <%= f.select :slide_class, [["simple slide","step slide"],["awesome","step"]] %>
  </div>

  <div class="field">
    <%= f.label :html_content %><br />
    <%= f.text_area :html_content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
